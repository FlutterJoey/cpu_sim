        LDI r1 0 // slecht
        LDI r2 0 // matig
        LDI r3 0 // redelijk
        LDI r4 0 // goed
        CAL .total
        CAL .average_joey
        CAL .average_roberto_bonus
        CAL .median
        CAL .highest
        HLT

.total NOP
        ADD r2 r2  r12 // matig
        ADD r4 r4  r6

        ADD r3 r3  r7 // redelijk
        ADD r7 r3  r7
        ADD r7 r12 r12

        ADD r6 r6 r8 // goed
        ADD r12 r8 r12

        ADD r12 r1 r12 // slecht
        RET

.average_joey NOP // only after calling .total
        RSH r12 r5
        LDI r6 1
        AND r5 r6 r0
        LDI r7 0
        BRH zero .average_joey_continue
        INC r7
.average_joey_continue NOP
        RSH r5 r5
        ADD r7 r5 r5
        MOV r5 r13
        RET

.average_roberto_bonus NOP // only after calling .total
        LDI r7 0 // quocient
        LDI r8 0 // remainder
        CAL .calculate_total_freq // r5
        MOV r12 r6
.average_roberto_bonus_start_loop NOP
        ADD r5 r0 r0
        BRH zero .average_roberto_bonus_skip_round
        SUB r6 r5 r6
        BRH carry .average_roberto_bonus_remainder
        INC r7
        MOV r6 r8
        JMP .average_roberto_bonus_start_loop
.average_roberto_bonus_remainder NOP
        RSH r5 r5
        SUB r8 r5 r0
        BRH carry .average_roberto_bonus_skip_round
        INC r7
.average_roberto_bonus_skip_round NOP
        MOV r7 r11
        RET

.calculate_total_freq NOP // sets total frequence in r5
        ADD r1 r2 r5
        ADD r3 r5 r5
        ADD r4 r5 r5
        RET

.median NOP
        CAL .calculate_total_freq
        RSH r5 r5 // the mid point

        LDI r14 1 // slecht
        MOV r1 r6
        SUB r5 r6 r0
        BRH carry .found_median
        
        INC r14 // matig
        ADD r2 r6 r6
        SUB r5 r6 r0
        BRH carry .found_median

        INC r14 // redelijk
        ADD r3 r6 r6
        SUB r5 r6 r0
        BRH carry .found_median

        INC r14
.found_median NOP
        RET

.highest NOP
        MOV r1 r5 // slecht
        LDI r6 1

        SUB r5 r2 r0
        BRH notcarry .is_continue_matig
        MOV r2 r5
        LDI r6 2
.is_continue_matig NOP
        SUB r5 r3 r0
        BRH notcarry .is_continue_redelijk
        MOV r3 r5
        LDI r6 3
.is_continue_redelijk NOP
        SUB r5 r4 r0
        BRH notcarry .is_continue_goed
        MOV r4 r5
        LDI r6 4
.is_continue_goed NOP
        MOV r6 r15
        RET