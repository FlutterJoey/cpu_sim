// Simple program that reads a single character and prints it out
            LDI r1 12
            CAL .readchar
            CAL .printchar
            HLT
// Listens to the keyboard until a character is provided and stores in in the memory at r1
.readchar   LDI r2 251 // stdin address
            LDI r3 1
            STR r2 r3 1 // turn on read mode in use first entry
.rch_loop   LOD r2 r4 0
            ADD r4 r0 r0
            BRH notzero .rch_end_l
            JMP .rch_loop
.rch_end_l  STR r1 r4 0
            RET
// Prints any character set in memory pointer in register r1
.printchar  LOD r1 r3 0
            LDI r2 254
            STR r2 r3 1
            LDI r4 2
            STR r2 r4 0
            RET